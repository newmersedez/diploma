                            FontSize="20"
                            Background="Transparent"
                            Foreground="#404040"
                            BorderThickness="0"
                            Command="{Binding SendDocumentCommand}">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="30" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Grid.Column="2"
                            Style="{StaticResource ButtonStyle}" Height="40" Width="40"
                            Content=">"
