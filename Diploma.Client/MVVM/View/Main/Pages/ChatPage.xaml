<Page x:Class="Diploma.Client.MVVM.View.Main.Pages.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:main="clr-namespace:Diploma.Client.MVVM.ViewModel.Main"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      Height="Auto" Width="Auto"
      Background="#36393F">
    
    <Page.DataContext>
        <main:ChatPageViewModel />
    </Page.DataContext>
    
    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#2F3136" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="220" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Chats"
                       FontSize="14" Foreground="LightGray"
                       FontWeight="Bold" Margin="10 10 0 0"/>
                <Label Grid.Row="1" Content="Имя пользователя" 
                       Foreground="LightGray"
                       FontSize="13" 
                       Margin="10 0 10 0"/>
                <TextBox Grid.Row="2" Grid.Column="0"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource InputFieldStyle}"
                         Height="30"
                         Margin="10 0 10 0"
                         HorizontalAlignment="Stretch" />
                <Label Grid.Row="3" Content="Название чата"
                       Foreground="LightGray"
                       FontSize="13" 
                       Margin="10 0 10 0"/>
                <TextBox Grid.Row="4" Grid.Column="0"
                         Text="{Binding Chatname, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource InputFieldStyle}"
                         Height="30"
                         Margin="10 0 10 0"
                         HorizontalAlignment="Stretch" />
                <Button Grid.Row="5"
                        Style="{StaticResource ButtonStyle}"
                        Margin="10 10 10 0"
                        Height="30"
                        Content="Создать чат"
                        Command="{Binding CreateChatCommand}"/>
            </Grid>
            <ListView Grid.Row="1" BorderThickness="0"
                      Background="Transparent"
                      Margin="0 0 0 15"
                      ItemsSource="{Binding Chats, Mode=OneWay}"
                      ItemContainerStyle="{StaticResource ChatListStyle}"
                      SelectedItem="{Binding SelectedChat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            </ListView>
            <DockPanel Grid.Row="2"
                       VerticalAlignment="Bottom"
                       Background="#252525">
                <Border Width="30"
                        Height="30"
                        Background="DarkSlateGray"
                        CornerRadius="25" 
                        Margin="10 0 0 0"/>
                <StackPanel DockPanel.Dock="Right" 
                            Orientation="Vertical" 
                            Height="60" 
                            VerticalAlignment="Bottom">
                    <TextBlock Text="{Binding AuthorizedUser.Name, Mode=OneWay}"
                               FontSize="14"
                               Foreground="LightGray"
                               FontWeight="Bold" 
                               Margin="10 10 0 0"/>
                    <TextBlock Text="{Binding AuthorizedUser.Email, Mode=OneWay}"
                               FontSize="14"
                               Foreground="LightGray"
                               FontWeight="Thin" 
                               Margin="10 0 0 0"/>
                </StackPanel>
            </DockPanel>
        </Grid>
        
        <Grid Grid.Column="1"
              Background="#36393F"
              Visibility="{Binding Visibility, UpdateSourceTrigger=PropertyChanged}">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            
            <DockPanel Grid.Row="0"
                       VerticalAlignment="Bottom"
                       Background="#292B2F"
                       Height="60">
                <Button DockPanel.Dock="Right" HorizontalAlignment="Right"
                        Style="{StaticResource ButtonStyle}"
                        Content="⨉"
                        Height="40" Width="40"
                        Margin="0 0 10 0"
                        Background="Transparent"
                        ToolTip="Удалить чат" 
                        FontSize="18"
                        BorderThickness="0"
                        Command="{Binding DeleteChatCommand}">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="30" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Border Width="30"
                        Height="30"
                        Background="DarkSlateGray"
                        CornerRadius="25" 
                        Margin="10 0 0 0"/>
                <TextBlock DockPanel.Dock="Right"
                           Text="{Binding SelectedChat.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           FontSize="14"
                           Foreground="LightGray"
                           VerticalAlignment="Center"
                           FontWeight="Bold" 
                           Margin="10 0 0 0"/>
            </DockPanel>
            <ListView Grid.Row="1"
                      BorderThickness="0"
                      Background="#36393F"
                      ItemsSource="{Binding Messages, Mode=OneWay}"
                      ItemContainerStyle="{StaticResource ChatStyle}">
            </ListView>
            <DockPanel Grid.Row="2" Background="#2F3136" LastChildFill="True" >
                <Grid Height="60" DockPanel.Dock="Bottom" 
                      ShowGridLines="False"
                      VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" 
                             Height="40"
                             Margin="10 0 0 0"
                             Style="{StaticResource InputFieldStyle}"
                             Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Grid.Column="1" 
                            Style="{StaticResource ButtonStyle}" Height="40" Width="40"
                            Content="📁"
                            ToolTip="Отправить документ" 
                            FontSize="20"
                            Background="Transparent"
                            BorderThickness="0" >
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="30" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Grid.Column="2"
                            Style="{StaticResource ButtonStyle}" Height="40" Width="40"
                            Content=">"
                            ToolTip="Отправить сообщение" 
                            FontSize="25"
                            Background="Transparent"
                            Margin="0 0 10 0"
                            BorderThickness="0" 
                            Command="{Binding SendMessageCommand}">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="30" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </DockPanel>
        </Grid>
    </Grid>
</Page>
