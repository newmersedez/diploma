                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="30" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </DockPanel>
        </Grid>
    </Grid>
</Page>
