                      Margin="0 0 0 15"
                      ItemsSource="{Binding Chats, Mode=OneWay}"
                      ItemContainerStyle="{StaticResource ChatListStyle}"
                      SelectedItem="{Binding SelectedChat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            </ListView>
            <DockPanel Grid.Row="2"
                       VerticalAlignment="Bottom"
                       Background="#CCCCCC">
                <Border DockPanel.Dock="Left" 
                        Width="15"
                        Height="15"
                        ToolTip="Online"
                        Background="LawnGreen"
                        CornerRadius="25" 
                        Margin="10 0 0 0"/>
                <StackPanel DockPanel.Dock="Left" 
                            Orientation="Vertical" 
                            Height="60" 
                            VerticalAlignment="Bottom">
                    <TextBlock Text="{Binding AuthorizedUser.Name, Mode=OneWay}"
                               FontSize="14"
                               Foreground="#505050"
                               FontWeight="Bold" 
                               Margin="10 10 0 0"/>
                    <TextBlock Text="{Binding AuthorizedUser.Email, Mode=OneWay}"
                               FontSize="13"
                               Foreground="#505050"
                               Margin="10 0 0 0"/>
                </StackPanel>
                <Button DockPanel.Dock="Left" Content="â›­" Height="40" Width="40" HorizontalAlignment="Right"
